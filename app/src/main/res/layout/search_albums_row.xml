<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/unblur_icon_color"
        android:padding="15dp"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/searched_album_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/none_img"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searched_album_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="none tracks"/>
            <TextView
                android:id="@+id/searched_album_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none artist"/>


        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>